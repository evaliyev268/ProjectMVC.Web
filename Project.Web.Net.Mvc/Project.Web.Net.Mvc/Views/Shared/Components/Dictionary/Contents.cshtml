@using Project.Web.Net.Mvc.ViewModels
@model List<ContentViewModel>

@foreach (var content in Model)
{
    <div class="card" style="width: 57rem;">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title">@content.Topic</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">@content.Author</h6>
                <p class="card-text">@content.AuthorsOpinion</p>
                <a>@content.Date</a>
            </div>

            <!-- Link on the right side -->
            <div class="d-flex flex-column">
            <a href="https://www.google.com/search?q=dolar+tl&oq=do&gs_lcrp=EgZjaHJvbWUqBggBEEUYOzIGCAAQRRg5MgYIARBFGDsyBggCEEUYOzIGCAMQRRg8MgYIBBBFGDwyBggFEEUYPdIBCDM3MTlqMGo3qAIIsAIB&sourceid=chrome&ie=UTF-8" target="_blank" class="btn btn-primary ms-3 mt-3">View</a>
            
            
            <a  class="btn btn-danger ms-3 mt-3" asp-controller="Dictionary" asp-action="ContentDelete" asp-route-id="@content.Id">Delete</a>
            </div>

        </div>
    </div>

}


